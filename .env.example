# Application Settings
LOG_LEVEL=INFO
API_DEBUG=True

# Model Settings
MODEL_NAME=distilbert-base-uncased-finetuned-sst-2-english
MODEL_DEVICE=cpu
MODEL_BATCH_SIZE=32

# Twikit Authentication (IMPORTANT)
# You must fill these with your Twitter login credentials.
# The library uses these to log in and obtain the necessary cookies.
# It is recommended to use a dedicated account for scraping.
TWITTER_USERNAME="your-twitter-username"
TWITTER_EMAIL="your-twitter-email"
TWITTER_PASSWORD="your-twitter-password"

# Database
DATABASE_URL=sqlite:///./sentiment_analyser.db

# API Settings
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4

# Security
SECRET_KEY=changeme-in-production-use-strong-random-key
API_KEY=

# Cache (Redis)
REDIS_URL=redis://localhost:6379/0
CACHE_ENABLED=False
CACHE_TTL=3600

# Optional: Twitter API (if using official API)
# TWITTER_API_KEY=
# TWITTER_API_SECRET=
# TWITTER_ACCESS_TOKEN=
# TWITTER_ACCESS_SECRET=
