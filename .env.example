# Application Settings
LOG_LEVEL=INFO
API_DEBUG=True

# Model Settings
MODEL_NAME=distilbert-base-uncased-finetuned-sst-2-english
MODEL_DEVICE=cpu
MODEL_BATCH_SIZE=32

# Twikit Authentication (IMPORTANT)
# You must fill these with your own browser cookies to use the scraper.
# 1. Log in to twitter.com in your web browser.
# 2. Open the developer tools (F12 or right-click -> Inspect).
# 3. Go to the 'Application' or 'Storage' tab.
# 4. Find the cookies for twitter.com.
# 5. Copy the value for the 'auth_token' cookie and paste it below.
# 6. Copy the value for the 'ct0' cookie and paste it below.
TWITTER_AUTH_TOKEN=""
TWITTER_CT0=""

# Database
DATABASE_URL=sqlite:///./sentiment_analyser.db

# API Settings
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4

# Security
SECRET_KEY=changeme-in-production-use-strong-random-key
API_KEY=

# Cache (Redis)
REDIS_URL=redis://localhost:6379/0
CACHE_ENABLED=False
CACHE_TTL=3600

# Optional: Twitter API (if using official API)
# TWITTER_API_KEY=
# TWITTER_API_SECRET=
# TWITTER_ACCESS_TOKEN=
# TWITTER_ACCESS_SECRET=
